---
import Layout from '../layouts/Layout.astro';
import Image from 'astro/components/Image.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Experience from '../components/Experience.astro';
import About from '../components/About.astro';
import Projects from '../components/Projects.astro';
import { CodeIcon, BriefcaseIcon } from '../components/icons/';
---

<Layout 
	title="Alex Duran's portfolio"
	description="Alex Duran's portfolio, a software and web developer specialized on full-stack development."
>
	<main class="px-4">
		<SectionContainer id="home" class="pt-28 pb-20">
			<Image
				src="/images/alejandro.png"
				alt="Alex's beauty face"
				class="rounded-full mb-10"
				width="100"
				height="100"
			/>
			<About />
		</SectionContainer>
		<SectionContainer id="experience" class="pt-10 pb-20">
			<h2 class="text-2xl font-semibold flex gap-x-2 pb-10">
				<BriefcaseIcon class="size-8" />
				Work Experience
			</h2>
			<Experience />
		</SectionContainer>
		<SectionContainer id="projects" class="pt-10">
			<h2 class="text-2xl font-semibold flex gap-x-2 pb-10">
				<CodeIcon class="size-8"/>
				Projects
			</h2>
			<Projects />
		</SectionContainer>
	</main>
</Layout>