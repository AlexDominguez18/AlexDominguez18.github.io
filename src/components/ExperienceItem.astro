---
import ArrowIcon from "./icons/ArrowIcon.astro";
import Button from "./Button.astro";

interface ExperienceItem {
  time: string;
  title: string;
  description: string;
  link?: string;
}

const { time, title, description, link } = Astro.props;
---

<div class="absolute w-3 h-3 border border-gray-700 dark:bg-gray-200 bg-black rounded-full mt-1.5 -start-1.5"></div>
<time class="mb-1 text-sm font-normal leading-none text-gray-500 dark:text-gray-300">{time}</time>
<h3 class="text-lg font-semibold text-sky-800 dark:text-sky-200">{title}</h3>
<p class="mb-4 text-base font-normal text-gray-600 dark:text-gray-300 text-pretty">{description}</p>
{
  link && (
    <Button url={link}>
      See more...
      <ArrowIcon class="size-4 ms-2" />
    </Button>
  )
}