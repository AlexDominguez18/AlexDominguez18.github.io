---
import Carrousel from "./Carrousel.astro";
import Pill from "./Pill.astro";
import ArrowIcon from "./icons/ArrowIcon.astro";

const { id, title, description, tags, images, link } = Astro.props;
---
<div class="p-4 rounded-lg shadow bg-opacity-75 border-gray-700 hover:bg-slate-800 transition">
  <h3 class="text-2xl font-semibold text-sky-200 dark:text-white mb-2">
    {title}
  </h3>
  <p class="text-lg text-pretty mb-4">{description}</p>
  <ul class="flex gap-x-2 mb-4">
    {
      tags.map((tagName) => (
        <li>
          <Pill tagName={tagName} />
        </li>
      ))
    }
  </ul>
  <Carrousel id={id} images={images} />
  <a
    href={link}
    class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700 max-w-40 mt-4 "
    >View project...
    <ArrowIcon class="size-4 ms-2" />
  </a>
  

    
</div>