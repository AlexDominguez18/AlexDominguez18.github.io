---
interface Props {
  url?: string;
}

const { url } = Astro.props;
---
<a
  href={url}
  target="_blank"
  class="inline-flex items-center px-4 py-2 mt-5 text-sm font-medium text-gray-800 dark:text-white bg-gray-400/50 dark:bg-white/30 border border-gray-500/10 dark:border-white/10 rounded-full hover:bg-gray-300/80 dark:hover:bg-white/50 focus:z-10 focus:ring-4 focus:outline-none dark:focus:ring-white/20 transition"
>
  <slot />
</a>
